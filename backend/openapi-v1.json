      "401": {
        "description": "Токен отсутствует, просрочен или некорректен"
      },
      "object": {
        "description": "Объект с данными",
        "content": {
          "application/json": {
            "schema": {
              "type": "object"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "JWT": {
        "type": "http",
        "description": "Документация JWT: [https://jwt.io/](https://jwt.io/)\n",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
