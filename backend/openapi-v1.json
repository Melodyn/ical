      "name": "calendar",
      "description": "Работать с календарём сообщества. Авторизация по JWT"
    }
  ],
  "paths": {
    "/auth": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Получить JWT",
        "description": "Принимает в теле запроса объект из query-строки с [параметрами от VK](https://vk.com/dev/vk_apps_docs3?f=6.%2B%D0%9F%D0%B0%D1%80%D0%B0%D0%BC%D0%B5%D1%82%D1%80%D1%8B%2B%D0%B7%D0%B0%D0%BF%D1%83%D1%81%D0%BA%D0%B0).\n\nВозвращает JWT с ограниченным сроком жизни. При его истечении необходима повторная аутентификация.\n",
        "requestBody": {
          "description": "Должен содержать все параметры с перфиксом `vk_` и подпись. Порядок не важен. Допустимы лишние свойства, они будут проигнорированы.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth_body"
              },
              "example": {
                "vk_access_token_settings": "",
                "vk_app_id": "7966403",
                "vk_are_notifications_enabled": "0",
                "vk_is_app_user": "1",
                "vk_is_favorite": "0",
                "vk_language": "ru",
                "vk_platform": "desktop_web",
                "vk_ref": "catalog_recent",
                "vk_ts": "1000000000",
                "vk_user_id": "123",
                "sign": "32tSvaHTQyskzTS5Yb-OrUH1cOKrzWdKt-CrcOC2EVk"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Аутентификация прошла успешно, возращается JWT",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200"
                }
              }
            }
          },
          "400": {
            "description": "Ошибка в запросе. Ответ описывает код ошибки и сообщение",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_400"
                }
              }
            }
          },
          "401": {
            "description": "Подпись VK не прошла проверку на корректность"
          }
        },
        "security": []
      }
    },
    "/calendar": {
      "get": {
        "tags": [
          "calendar"
        ],
        "responses": {
          "200": {
            "description": "Объект с данными",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Ошибка в запросе. Ответ описывает код ошибки и сообщение",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_400"
                }
              }
            }
          },
          "401": {
            "description": "Токен отсутствует, просрочен или некорректен"
          }
        }
      },
      "post": {
        "tags": [
          "calendar"
        ],
        "responses": {
          "200": {
            "description": "Объект с данными",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Ошибка в запросе. Ответ описывает код ошибки и сообщение",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_400"
                }
              }
            }
          },
          "401": {
            "description": "Токен отсутствует, просрочен или некорректен"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "auth_body": {
        "required": [
          "sign"
        ],
        "type": "object",
        "properties": {
          "sign": {
            "type": "string"
          }
        }
      },
      "inline_response_200": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "inline_response_400": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "Ошибка в запросе. Ответ описывает код ошибки и сообщение",
        "content": {
