form(
  name='adminForm'
  action=values.formActionUrl
  method='post'
).text-end
  input#widgetToken.form-control(
    name='widgetToken'
    type='hidden'
    value=null
  )
  .mb-3.text-start
    label.form-label(for='calendarId') Идентификатор календаря
    input#calendarId.form-control(
      class={
        'is-invalid': errors.calendarId
      }
      name='calendarId'
      type='email'
      value=calendarId
      required
    )
    .invalid-feedback.text-break #{errors.calendarId}
  .mb-3.text-start
    label.form-label(for='timezone') Часовой пояс
    select#timezone.form-control(
      class={
        'is-invalid': errors.timezone
      }
      name='timezone'
      required
    )
      each timezone in values.timezones.all
        option(
          value=timezone.name
          selected=(timezone.name === calendarTimezone)
        ) #{timezone.offset} #{timezone.name}
    .invalid-feedback #{errors.timezone}
  input.btn.btn-primary.text-end(
    type='submit'
    value=(calendarId ? 'Изменить' : 'Сохранить')
  )
